<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      <%= typeof title != 'undefined'? title:"Cooking Blog-Made with Node.js" %>
    </title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="container bg-white shadow-lg py-3">
      <div class="row mb-2 px-4">
        <div class="col-lg-3 col-md-4 col-sm-12 py-3 border-bottom">
          <a href="/" class=""
            ><img src="/img/logo.svg" class="img-fluid py-1"" width="229"
            height="68" alt="" /></a
          >
        </div>
        <div class="col-lg-6 col-md-4 col-sm-12 py-3 border-bottom">
          <ul class="nav flex justify-content-end py-1">
            <li class="nav-item">
              <a class="nav-link text-dark fw-bold" href="/">HOME</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-dark fw-bold" href="/about">ABOUT</a>
            </li>
            
            <li class="nav-item">
              <a class="nav-link text-dark fw-bold" href="/contact">CONTACT</a>
            </li>
          </ul>
        </div>
        
      </div>
      

        <div class="row flex-lg-row-reverse align-items-center g-4 py-5">
            <div class="col-10 col-sm-8 col-lg-6">
              <img src="/uploads/<%=getID.image%>" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" style="height: 
              500px;" loading="lazy">
            </div>
            <div class="col-lg-6">
              <h1 class="display-5 fw-bold p-2 lh-1 mb-3 text-danger"><%= getID.name %></h1>
              <h2 class="p-2"><%=getID.category%></h2>
              <p class="lead description fw-medium p-2"><%=getID.description%></p>
              <h2 class="display-6 fw-bold p-2">Ingredients</h2>
              <ul class="list-group fw-medium">
               <% getID.ingredients.forEach(function(ingredients){ %>
                <li class="list-group-item"><%=ingredients%></li>

                <%})%>
                
              </ul>
            </div>
          </div>
      </div>
    </div>
  </body>
</html>
