        <div class="text-center">View all</div>
        <%}%> -->

      <div class="row mb-2 px-4 py-2">
        <div
          class="col-lg-12 col-md-12 col-sm-12 d-flex justify-content-between"
        >
          <div><h1>Latest Recipe</h1></div>
          <a href="/explore-latest" class="text-black">View More</a>
        </div>
      </div>
      <div class="row mb-2 px-4 py-4 text-center g-4">
        <div
          class="col-lg-12 col-md-5 col-sm-5 d-flex flex-wrap align-items-center justify-content-around pt-1 col-sm-12 g-4"
        >
          <% if (recipeLatestOne !== "") { %> <%
          recipeLatestOne.forEach(function(recipe) { %>
          <a href="/recipe/<%=recipe._id%>" class="category-detail p-1">
            <img
              src="/uploads/<%= recipe.image %>"
              alt=""
              class="img-fluid category_img"
              style="height: 300px"
            />
            <div><%= recipe.name %></div>
          </a>
          <% }); %> <% } %>
        </div>
      </div>
      <div class="row mb-2 px-4 py-2">
        <div
          class="col-lg-12 col-md-12 col-sm-12 d-flex justify-content-between"
        >
          <div><h2 class="display-4 fs-2 fw-medium">American Recipe</h2></div>
        </div>
      </div>
      <div class="row mb-2 px-s4 py-4 text-center g-4">
        <div
          class="col-lg-12 col-md-5 col-sm-5 d-flex flex-wrap align-items-center justify-content-around pt-1 col-sm-12 w-100"
        >
          <% if (AmericanRecipe !== "") { %> <%
          AmericanRecipe.forEach(function(recipe) { %>
          <a href="/recipe/<%=recipe._id%>" class="category-detail p-1">
            <img
              src="/uploads/<%= recipe.image %>"
              alt=""
              class="img-fluid category_img"
              style="height: 300px"
            />
            <div><%= recipe.name %></div>
          </a>
          <% }); %> <% } %>
        </div>
      </div>
      <div class="row mb-2 px-4 py-2">
        <div
          class="col-lg-12 col-md-12 col-sm-12 d-flex justify-content-between"
        >
          <div><h2 class="display-4 fs-2 fw-medium">Chinese Recipe</h2></div>
        </div>
      </div>
      <div class="row mb-2 px-s4 py-4 text-center g-4">
        <div
          class="col-lg-12 col-md-5 col-sm-5 d-flex flex-wrap align-items-center justify-content-around pt-1 col-sm-12 w-100"
        >
          <% if (ChineseRecipe !== "") { %> <%
          ChineseRecipe.forEach(function(recipe) { %>
          <a href="/recipe/<%=recipe._id%>" class="category-detail p-1">
            <img
              src="/uploads/<%= recipe.image %>"
              alt=""
              class="img-fluid category_img"
              style="height: 300px"
            />
            <div><%= recipe.name %></div>
          </a>
          <% }); %> <% } %>
        </div>
      </div>
      <div class="row mb-2 px-4 py-2">
        <div
          class="col-lg-12 col-md-12 col-sm-12 d-flex justify-content-between"
        >
          <div><h2 class="display-4 fs-2 fw-medium">Thai Recipe</h2></div>
        </div>
      </div>
      <div class="row mb-2 px-s4 py-4 text-center g-4">
        <div
          class="col-lg-12 col-md-5 col-sm-5 d-flex flex-wrap align-items-center justify-content-around pt-1 col-sm-12 w-100"
        >
          <% if (ThaiRecipe !== "") { %> <% ThaiRecipe.forEach(function(recipe)
          { %>
          <a href="/recipe/<%=recipe._id%>" class="category-detail p-1">
            <img
              src="/uploads/<%= recipe.image %>"
              alt=""
              class="img-fluid category_img"
              style="height: 300px"
            />
            <div><%= recipe.name %></div>
          </a>
          <% }); %> <% } %>
        </div>
      </div>
    </div>
  </body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</html>
