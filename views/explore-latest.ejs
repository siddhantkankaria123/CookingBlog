<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      <%= typeof title != 'undefined'? title:"Cooking Blog-Made with Node.js" %>
    </title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="container bg-white shadow-lg py-3">
      <div class="row mb-2 px-4">
        <div class="col-lg-3 col-md-4 col-sm-12 py-3 border-bottom">
          <a href="/" class=""
            ><img src="/img/logo.svg" class="img-fluid py-1"" width="229"
            height="68" alt="" /></a
          >
        </div>
        <div class="col-lg-6 col-md-4 col-sm-12 py-3 border-bottom">
          <ul class="nav flex justify-content-end py-1">
            <li class="nav-item">
              <a class="nav-link text-dark fw-bold" href="/">HOME</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-dark fw-bold" href="/about">ABOUT</a>
            </li>
           
            <li class="nav-item">
              <a class="nav-link text-dark fw-bold" href="/contact">CONTACT</a>
            </li>
          </ul>
        </div>
        
      </div>
      

      <div class="row mb-2 px-4 py-4 text-center g-4">
        <div class="col-lg-12 col-md-5 col-sm-5 d-flex flex-wrap align-items-center justify-content-around p-4 col-sm-12 w-100 ">
          <% if (Exploreall  !== "") { %>
            <% Exploreall.forEach(function(recipe) { %>
              <a href="/recipe/<%=recipe._id%>" class="category-detail p-1 mt-4">
                <img src="/uploads/<%= recipe.image %>" alt="" class="img-fluid category_img" style="height: 300px" />
                <div><%= recipe.name %></div>
              </a>
            <% }); %>
          <% } %>
        </div>
      </div>
      </div>
    </div>
  </body>
</html>
